<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.shustanov.lorimobile.fragment.settings.SettingsVm" />

        <import
            alias="View"
            type="android.view.View" />
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Endpoint"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/endpoint_input_layout"
            android:layout_marginEnd="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:error="@{vm.error}">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={vm.endpoint}"
                android:maxLines="1"
                android:isScrollContainer="false"
                android:minEms="60"
                android:lines="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/apply"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:enabled="@{vm.edited}"
            android:text="Apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endpoint_input_layout"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="64dp"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/apply"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/endpoint_input_layout" />
    </android.support.constraint.ConstraintLayout>

</layout>